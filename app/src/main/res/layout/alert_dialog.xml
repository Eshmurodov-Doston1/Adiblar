<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/alert_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="350dp"
        android:layout_height="220dp">
        <TextView
            android:id="@+id/info"
            android:text="Biz haqimizda"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:textStyle="normal"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linear"
            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="#706E6E"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/ok"
            app:layout_constraintTop_toBottomOf="@id/linear"

            app:layout_constraintLeft_toLeftOf="@id/info"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintVertical_bias="0.1"
            android:textStyle="normal"
            app:layout_constraintWidth_percent="0.85"
            android:gravity="center"
            android:text="O`zbek va Jahon adabiyoti\nixlosmandlari uchun ajoyib qo`llanma."
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/no"
           app:layout_constraintTop_toBottomOf="@id/ok"
            app:layout_constraintLeft_toLeftOf="@id/ok"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal"
            android:text="Version:1.0\nCompany:Student\nMail:eshmurodovdoston630@gmail.com\nPhone:+998 99 420 62 78"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>